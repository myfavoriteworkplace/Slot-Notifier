# BookMySlot Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (Required)
# ===========================================
# PostgreSQL connection string
# Option 1: Local Docker setup: postgresql://postgres:postgres@localhost:5432/bookmyslot
# Option 2: External Render Database: Copy the "External Database URL" from your Render Dashboard
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bookmyslot

# ===========================================
# SESSION (Required)
# ===========================================
# Secret key for session encryption - use a random 32+ character string
# Generate with: openssl rand -base64 32
SESSION_SECRET=a-very-secret-string-change-this-for-production

# ===========================================
# ADMIN AUTHENTICATION
# ===========================================
# When both are set, enables email/password auth instead of Replit OIDC
# Required for deployment on Render or other external platforms
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-admin-password

# ===========================================
# SERVER (Optional)
# ===========================================
# Port to run the server on (defaults to 5001)
PORT=5001

# Environment mode (development or production)
NODE_ENV=development

# ===========================================
# LOCAL DEVELOPMENT
# ===========================================
# Set this to skip Replit OIDC in local development
REPL_ID=local_dev

# ===========================================
# SPLIT DEPLOYMENT (Render)
# ===========================================
# Frontend URL for CORS - only needed when frontend and backend are separate
# FRONTEND_URL=https://your-frontend.onrender.com

# Frontend env var - API URL for the frontend to connect to backend
# VITE_API_URL=https://your-backend.onrender.com
